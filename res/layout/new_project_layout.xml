	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:orientation="vertical">

			<LinearLayout
			  	android:orientation="vertical"
			  	android:layout_width="fill_parent"
			  	android:layout_height="wrap_content"
			  	android:layout_weight="1"	
			  	android:id="@+id/new_isbn_issn_layout_text_pannel" 		  	
			  	android:padding="5dp">
			    
			    <TextView 
			    	android:text="Project Name"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
			    	android:textSize="17dp" 
			    	android:layout_marginLeft="31dp" 
			    	android:layout_marginTop="10dp"
			    	android:textColor="#000000">
			    </TextView>
			    
			    <EditText
					android:layout_height="wrap_content"
					android:id="@+id/new_project_layout_project_name_text"
					android:layout_width="fill_parent"  
					android:inputType="text"
					android:layout_marginLeft="30dp"
					android:layout_marginRight="30dp" 
					android:textSize="20dp">
				</EditText>
			    
			    <TextView 
			    	android:text="Default Style"
			    	android:id="@+id/new_isbn_issn_layout_text_pannel" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
			    	android:textSize="17dp" 
			    	android:layout_marginTop="10dp" 
			    	android:layout_marginLeft="31dp"
			    	android:textColor="#000000">
			    
			    </TextView>
				
				<Spinner 
					android:id="@+id/new_project_layout_default_style_spinner"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="30dp"
					android:layout_marginRight="30dp"
					android:drawSelectorOnTop="true"
					android:prompt="@string/default_style_prompt">
				</Spinner>
			    
			</LinearLayout>
		
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="10dp"
				android:layout_below="@+id/new_isbn_issn_layout_text_pannel"
				android:layout_marginBottom="10dp">
		
				<Button
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/new_project_layout_done_button"
					android:layout_weight="1"
					android:layout_marginLeft="37dp"
					android:layout_marginRight="3dp"
					android:background="@drawable/button_selctor"
					android:text="Done"/>
		
				<Button
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/new_project_layout_cancel_button"
					android:layout_weight="1"
					android:layout_marginRight="37dp"
					android:layout_marginLeft="3dp"
					android:background="@drawable/button_selctor"
					android:text="Cancel"/>
		
			</LinearLayout>
	
		</RelativeLayout>
	
	</RelativeLayout>
	
	
</LinearLayout>