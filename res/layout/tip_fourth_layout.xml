<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="vertical"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent">
  	
  	<RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="45dp"
    	android:background="@drawable/referenceme_tip_bar">
    	
    	<RelativeLayout
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_alignParentLeft="true">		
	    	
	    </RelativeLayout>
	    	
    	<Button
        	android:id="@+id/tip_fourth_layout_close_button"
        	android:layout_width="32dp"
        	android:layout_height="32dp"
        	android:layout_marginRight="10dp"
        	android:layout_centerVertical="true"
        	android:layout_alignParentRight="true"
        	android:clickable="true"
        	android:background="@drawable/tips_close_button_selector">
        </Button>
	        
  	</RelativeLayout>
  	
  	<LinearLayout
	  	android:orientation="vertical"
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent"
	  	android:layout_weight="1"
		android:background="@drawable/referenceme_tip_fourth">
	</LinearLayout>
  	
  	<RelativeLayout
       	android:id="@+id/footer"
	  	android:orientation="horizontal"
	  	android:layout_width="fill_parent"
		android:layout_height="45dp"
		android:background="#000000"
        android:layout_alignParentBottom="true">
        
        <RelativeLayout
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_alignParentLeft="true">
    	
	    	<Button
	        	android:id="@+id/tip_fourth_layout_previous_button"
	        	android:layout_width="42dp"
	        	android:layout_height="32dp"
	        	android:layout_centerVertical="true"
	        	android:background="@drawable/tips_back_button_selector"
	        	android:layout_marginLeft="15dp">
	        </Button>
	    	
	    </RelativeLayout>
    	
    	<Button
        	android:id="@+id/tip_fourth_layout_next_button"
        	android:layout_width="42dp"
        	android:layout_height="32dp"
        	android:layout_marginRight="15dp"
        	android:layout_centerVertical="true"
        	android:layout_alignParentRight="true"
        	android:background="@drawable/tips_next_button_selector"
        	android:clickable="true">
        </Button>
        
	</RelativeLayout>
  	
</LinearLayout>